# Wrangler Configuration Template for Cloudflare Pages
# Copy this file to wrangler.toml and fill in your values
# DO NOT commit wrangler.toml to version control

name = "chinese-name"
compatibility_date = "2024-12-01"
compatibility_flags = ["nodejs_compat"]

# Pages configuration
pages_build_output_dir = ".vercel/output/static"

# Environment variables (set via Cloudflare Dashboard or wrangler secret)
# [vars]
# NEXT_PUBLIC_SITE_URL = "https://your-domain.com"

# Production environment
[env.production]
name = "chinese-name"

# Preview environment (for PR previews)
[env.preview]
name = "chinese-name-preview"

# Note: account_id should be set via CLOUDFLARE_ACCOUNT_ID environment variable
# Never commit your account_id to version control
