# Database
DATABASE_URL="file:./data/chinese-name.db"

# Optional: If using Turso (cloud SQLite)
# DATABASE_URL="libsql://your-database.turso.io"
# DATABASE_AUTH_TOKEN="your-auth-token"

# Optional: AI Integration (for enhanced name interpretations)
# OPENAI_API_KEY="sk-..."
# ANTHROPIC_API_KEY="sk-ant-..."

# App Config
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Optional: Search engine verification
# GOOGLE_SITE_VERIFICATION="..."
# YANDEX_VERIFICATION="..."
# YAHOO_VERIFICATION="..."

# ============================================================================
# Security Configuration
# ============================================================================

# Optional: Upstash Redis (for distributed rate limiting across serverless instances)
# UPSTASH_REDIS_REST_URL="https://..."
# UPSTASH_REDIS_REST_TOKEN="..."

# Optional: API Key for trusted clients (bypasses rate limits)
# API_KEY="your-secret-api-key-here"

# Optional: Comma-separated list of blocked IP addresses
# BLOCKED_IPS="1.2.3.4,5.6.7.8"

# Optional: Comma-separated list of whitelisted IP addresses/CIDRs (bypass rate limits)
# IP_WHITELIST="10.0.0.0/8,192.168.1.100"

# Optional: Comma-separated list of trusted proxy IPs (for X-Forwarded-For header)
# TRUSTED_PROXIES="127.0.0.1,::1"

# Optional: Allowed CORS origins (comma-separated)
# ALLOWED_ORIGINS="https://example.com,https://www.example.com"

# ============================================================================
# Monitoring & Observability
# ============================================================================

# Sentry Configuration (Error Tracking & Performance Monitoring)
# Get your DSN from: https://sentry.io/settings/projects/
# SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"

# Optional: Public Sentry DSN for client-side errors
# NEXT_PUBLIC_SENTRY_DSN="https://examplePublicKey@o0.ingest.sentry.io/0"

# Optional: Sentry environment name (default: production when NODE_ENV=production)
# SENTRY_ENVIRONMENT="production"

# Optional: Sentry release version (auto-detected from package.json)
# SENTRY_RELEASE="chinese-name@0.1.0"

# Optional: Enable Sentry in development (default: false)
# SENTRY_ENABLED="false"

# Optional: Sentry debug mode (additional logging)
# SENTRY_DEBUG="false"

# Optional: Sentry server name (for multi-server deployments)
# SENTRY_SERVER_NAME="server-1"

# Optional: Sample rate for performance transactions (0.0 to 1.0)
# - Production: 0.1 (10%) to manage quota
# - Development: 1.0 (100%) for debugging
# SENTRY_TRACES_SAMPLE_RATE="0.1"

# Optional: Sample rate for session replays (0.0 to 1.0)
# NEXT_PUBLIC_SENTRY_REPLAYS_SESSION_SAMPLE_RATE="0.01"
# NEXT_PUBLIC_SENTRY_REPLAYS_ERROR_SAMPLE_RATE="0.1"

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level: debug, info, warn, error (default: info)
# LOG_LEVEL="info"

# Enable structured JSON logging (default: true in production)
# STRUCTURED_LOGGING="true"

# ============================================================================
# Environment-Specific Settings
# ============================================================================

# NODE_ENV should be "production" in production
# NODE_ENV="production"
